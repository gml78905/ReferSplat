{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
        ,
        {
            "name": "Python: Render (ramen_gs)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/render.py",
            "console": "integratedTerminal",
            "args": [
                "-m",
                "/ws/data/Ref-lerf/train/ramen",
                "-c",
                "/ws/data/Ref-lerf/ramen.pth",
                "--include_feature"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONUNBUFFERED": "1"
            },
            "justMyCode": false
        },
        {
            "name": "Python: Train (ramen_gs)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/train.py",
            "console": "integratedTerminal",
            "args": [
                "-s",
                "/ws/data/Ref-lerf/ramen",
                "-m",
                "/ws/data/Ref-lerf/train/ramen",
                "--start_checkpoint",
                "/ws/data/Ref-lerf/ramen_gs/point_cloud/iteration_30000/point_cloud.ply"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONUNBUFFERED": "1"
            },
            "justMyCode": false
        },
        {
            "name": "Python: Test mIoU (ramen_gs)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/test_miou.py",
            "console": "integratedTerminal",
            "args": [
                "--render_dir",
                "/ws/data/Ref-lerf/train/ramen/render/ours_-1/renders",
                "--gt_dir",
                "/ws/data/Ref-lerf/train/ramen/render/ours_-1/gt"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONUNBUFFERED": "1"
            },
            "justMyCode": false
        }
    ]
}